{% props data %}
<div{{ attributes }}>
    <!-- About Section -->
    <section id="about" class="min-h-screen pt-20 bg-gray-50 flex items-center">
        <div class="container mx-auto px-6 flex flex-col md:flex-row items-center">
            <div class="md:w-1/2 mb-8 md:mb-0">
                <img src="https://via.placeholder.com/600x400" alt="About image" class="rounded-lg shadow-lg mx-auto">
            </div>
            <div class="md:w-1/2 md:pl-12">
                <h2 class="text-3xl font-bold mb-4">{{ data.subtitle }}</h2>
                <p class="mb-4 leading-relaxed">
                    {{ data.columnLeft|markdown_to_html }}
                </p>
                <p class="leading-relaxed">
                    {{ data.columnRight|markdown_to_html }}
                </p>
            </div>
        </div>
    </section>
</div>
