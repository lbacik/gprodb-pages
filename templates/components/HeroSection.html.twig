{% props data, isAboutEnabled %}
<div{{ attributes }}>
    <!-- Hero Section -->
    <section id="hero" class="h-screen pt-20 bg-gradient-to-r from-blue-600 to-indigo-700 flex items-center justify-center">
        <div class="text-center text-white px-6">
            <h1 class="text-4xl md:text-6xl font-bold mb-4">{{ data.title }}</h1>
            <p class="text-lg md:text-2xl mb-8">{{ data.subtitle }}</p>
            {% if isAboutEnabled %}
                <a href="#about" class="bg-white text-indigo-700 font-semibold px-6 py-3 rounded-lg shadow hover:bg-gray-100 transition">Learn More</a>
            {% endif %}
        </div>
    </section>
</div>
